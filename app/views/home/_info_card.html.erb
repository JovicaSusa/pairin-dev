<div class="md:w-2/3 border-2 border-black flex bg-white h-[460px] pb-4 flex-col items-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
  <div class="w-full border-b-2 border-black p-4 font-bold text-center bg-purple">
    <h2 class="text-lg font-headline"><%= title %></h2>
  </div>

  <div class="h-2/6 md:h-3/6 mt-6 flex justify-center items-center">
    <%= image_tag image_name, class: "w-1/2 h-fit" %>
  </div>

  <div class="pt-4 pb-2 flex mt-6 px-2 md:px-4">
    <p class="text-center text-xl md:text-base">
      <%= text %>
    </p>
  </div>
</div>
